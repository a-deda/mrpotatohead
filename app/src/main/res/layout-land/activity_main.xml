<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.adeda.mrpotatohead.MainActivity"
    android:layout_width="match_parent">

    <TextView
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/tableLayout"
        android:layout_below="@id/header"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/body"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/arms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arms"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/body"
            android:layout_alignStart="@+id/body"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ears"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ears"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/eyebrows"
            android:layout_alignStart="@+id/eyebrows"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/eyebrows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/eyebrows"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/body"
            android:layout_alignStart="@+id/body"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/eyes"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/body"
            android:layout_alignStart="@+id/body"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/hat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hat"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/body"
            android:layout_alignStart="@+id/body"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/glasses"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/body"
            android:layout_alignStart="@+id/body"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mouth"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/body"
            android:layout_alignStart="@+id/body"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/mustache"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/mustache"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/body"
            android:layout_alignStart="@+id/body"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/nose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nose"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/body"
            android:layout_alignStart="@+id/body"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shoes"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/body"
            android:layout_alignStart="@+id/body"
            android:visibility="invisible" />
    </RelativeLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

                <TableRow>
                    <CheckBox
                        android:text="@string/cb1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/checkBox1"
                        android:focusable="false"
                        android:checked="false"
                        android:onClick="onClick" />
                    <CheckBox
                        android:text="@string/cb2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/checkBox2"
                        android:focusable="false"
                        android:checked="false" />
                </TableRow>
                <TableRow>
                    <CheckBox
                        android:text="@string/cb3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/checkBox3"
                        android:focusable="false"
                        android:checked="false" />
                    <CheckBox
                        android:text="@string/cb4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/checkBox4"
                        android:focusable="false"
                        android:checked="false" />
                </TableRow>
                <TableRow>
                    <CheckBox
                        android:text="@string/cb5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/checkBox5"
                        android:focusable="false"
                        android:checked="false" />

                    <CheckBox
                        android:text="@string/cb6"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/checkBox6"
                        android:focusable="false"
                        android:checked="false" />
                </TableRow>
                <TableRow>
                    <CheckBox
                        android:text="@string/cb7"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/checkBox7"
                        android:focusable="false"
                        android:checked="false" />
                    <CheckBox
                        android:text="@string/cb8"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/checkBox8"
                        android:focusable="false"
                        android:checked="false" />
                </TableRow>
                <TableRow>
                    <CheckBox
                        android:text="@string/cb9"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/checkBox9"
                        android:focusable="false"
                        android:checked="false" />
                    <CheckBox
                        android:text="@string/cb10"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorText"
                        android:textColor="@color/colorText"
                        android:id="@+id/checkBox10"
                        android:focusable="false"
                        android:checked="false" />
                </TableRow>
        </TableLayout>
</RelativeLayout>
